# PANfm Environment Configuration
# Copy this file to .env and customize for your deployment

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# Secret Key for Sessions (generate a random key for production)
# You can generate a key with: python -c "import os; print(os.urandom(24).hex())"
SECRET_KEY=your-secret-key-here

# Optional: Custom port (default: 3000)
# FLASK_PORT=3000

# Production Deployment Notes:
# 1. Set FLASK_ENV=production
# 2. Set FLASK_DEBUG=False
# 3. Generate a unique SECRET_KEY
# 4. Enable HTTPS and set SESSION_COOKIE_SECURE=True in app.py
# 5. Backup encryption.key securely
# 6. Change default admin password on first login

# ===== Alert System Configuration (v1.9.0) =====

# Email Alerts
ALERT_EMAIL_ENABLED=false
ALERT_SMTP_HOST=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USER=your-email@gmail.com
ALERT_SMTP_PASSWORD=your-app-password
ALERT_FROM_EMAIL=panfm-alerts@example.com
ALERT_TO_EMAILS=admin@example.com,ops@example.com
ALERT_SMTP_TLS=true

# Webhook Alerts
ALERT_WEBHOOK_ENABLED=false
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/alerts
ALERT_WEBHOOK_HEADERS={}

# Slack Alerts
ALERT_SLACK_ENABLED=false
ALERT_SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_SLACK_CHANNEL=#alerts
ALERT_SLACK_USERNAME=PANfm Alerts
